# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# CORS
CORS_ORIGIN=http://localhost:5173

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://lightpath:password@localhost:5432/lightpath
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lightpath
DB_USER=lightpath
DB_PASSWORD=password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# LLM API Configuration (Gemini 1.5 Flash - recommended for cost)
LLM_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-api-key

# Alternative LLM providers (comment out if not using)
# ANTHROPIC_API_KEY=your-anthropic-api-key
# OPENAI_API_KEY=your-openai-api-key

# Vector Database (using pgvector for MVP)
VECTOR_DB_ENABLED=true

# Google Cloud Storage (Avatars)
GCP_PROJECT_ID=your-project-id
GCP_STORAGE_BUCKET=lightpath-avatars
GCP_CREDENTIALS_PATH=../gcp-sa.json

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@lightpath.app
SENDGRID_FROM_NAME=LightPath

# Application URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# Feature Flags
ENABLE_AVATAR_GENERATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_RATE_LIMITING=true

# Cost Optimization
LLM_CACHE_TTL=86400
LLM_MAX_TOKENS=200
LLM_RATE_LIMIT_PER_USER_DAY=50
